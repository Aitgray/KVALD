{
  "train": {
    "learning_rate": 1e-5,
    "num_epochs": 2,
    "batch_size": 8,
    "n_videos": 500,
    "device": "cuda",
    "resume_from": "kvald_unet_best.pth",
    "patience": 2
  },
  "data": {
    "source": "flare7k",

    "sequence_len": 16,
    "manifest_path": "C:/Users/aidan/Desktop/Projects/KVALD/bdd100k_manifest.json",
    "split": 0.1,

    "glare": {
      "enabled": true,
      "k_range": [0.5, 1.0],
      "mode_weights": {
        "hotspot": 0.15,
        "multi-hotspot": 0.15,
        "traveling": 0.15,
        "streak": 0.15,
        "bloom": 0.15,
        "flicker": 0.15,
        "none": 0.1
      },
      "threshold": 0.2
    },

    "synth": {
      "base_seed": 1337,
      "severity_range": [1, 4],
      "alpha_range": [0.25, 0.95],
      "n_spots": [1, 3],
      "n_streaks": [6, 12],
      "streak_decay": 2.25,
      "mask_threshold": 0.15,
      "grayscale": true,
      "color_jitter_prob": 0.15,
      "refine_dir": null,
      "fraction": 1.0
    },

    "flare7k": {
      "image_dir": "C:/Users/aidan/Desktop/Projects/Flare7Kpp/test_data/synthetic/input",
      "mask_dir":  "C:/Users/aidan/Desktop/Projects/Flare7Kpp/test_data/synthetic/mask"
    }
  },
  "smoothing": {
    "kernel_size": [5, 5],
    "sigma": 1.0
  },
  "kalman_filter": {
    "Q": 1e-5,
    "R": 1e-2
  },
  "unsupervised": {
    "loss_weight": 0.0
  },
  "verification": {
    "iou_threshold": 0.8,
    "dice_threshold": 0.8,
    "iou_fp_bias": 1.0,
    "iou_fn_bias": 1.0
  }
}
