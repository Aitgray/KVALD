{
    "train": {
        "learning_rate": 1e-4,
        "num_epochs": 50,
        "batch_size": 4,
        "n_videos": 500,
        "device": "cuda"
    },
    "data": {
        "source": "bdd100k",
        "sequence_len": 16,
        "manifest_path": "C:/Users/aidan/Desktop/Projects/KVALD/prototypes/dummy_manifest.json",
        "glare": {
            "enabled": true,
            "k_range": [0.5, 1.0],
            "mode_weights": {
                "hotspot": 0.15,
                "multi-hotspot": 0.15,
                "traveling": 0.15,
                "streak": 0.15,
                "bloom": 0.15,
                "flicker": 0.15,
                "none": 0.1
            },
            "threshold": 0.2
        }
    },
    "smoothing": {
        "kernel_size": [5, 5],
        "sigma": 1.0
    },
    "kalman_filter": {
        "Q": 1e-5,
        "R": 1e-2
    },
    "unsupervised": {
        "loss_weight": 0.2
    },
    "verification": {
        "iou_threshold": 0.8,
        "dice_threshold": 0.8
    }
